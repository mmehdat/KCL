<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <SelectDialog
        id = "DivisionVH"
        title="Division"
        class="sapUiPopupWithPadding"
        items="{VHModelResult>/}"
        confirm="_handleDivValueHelpClose"
        cancel="_handleDivValueHelpClose"
        search="_handleDivisionValueHelpSearch"
        rememberSelections="false"
        showClearButton="true"
        multiSelect="true">
        <StandardListItem
            icon="{ProductPicUrl}"
            iconDensityAware="false"
            iconInset="false"
            title="{VHModelResult>Division}"
            description="{VHModelResult>DivisionName}" />
    </SelectDialog>
</core:FragmentDefinition>